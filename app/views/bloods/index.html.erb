<p id="notice"><%= notice %></p>

<h1>Bloods</h1>
<%= line_chart Blood.group_by_day(:created_at).sum(:maxblood) %>
<%= line_chart @chart %>
<table>
  <thead>
    <tr>
      <th>Maxblood</th>
      <th>Minblood</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bloods.each do |blood| %>
      <tr>
        <td><%= blood.maxblood %></td>
        <td><%= blood.minblood %></td>
        <td><%= link_to 'Show', blood %></td>
        <td><%= link_to 'Edit', edit_blood_path(blood) %></td>
        <td><%= link_to 'Destroy', blood, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blood', new_blood_path %>
